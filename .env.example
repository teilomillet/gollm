# gollm Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (set the ones you need)
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GROQ_API_KEY=gsk_...
MISTRAL_API_KEY=...
COHERE_API_KEY=...
DEEPSEEK_API_KEY=...
GEMINI_API_KEY=...
DASHSCOPE_API_KEY=...          # Aliyun/Alibaba Cloud
OPENROUTER_API_KEY=...
AZURE_OPENAI_API_KEY=...

# =============================================================================
# Local LLM Servers (Ollama, LM Studio, etc.)
# =============================================================================
OLLAMA_ENDPOINT=http://localhost:11434
LMSTUDIO_ENDPOINT=http://localhost:1234/v1  # OpenAI-compatible

# =============================================================================
# Default Provider Settings
# =============================================================================
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_LOG_LEVEL=WARN

# =============================================================================
# Azure OpenAI (requires all three)
# =============================================================================
AZURE_OPENAI_RESOURCE_NAME=your-resource
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment
AZURE_OPENAI_API_VERSION=2023-05-15
